Leap year

#include <iostream>
using namespace std;

int main() {
    int year;
    cout<<"Enter the year:";
    cin>>year;
    if((year%4==0 && year%100!=0)||year%400==0)
    {
        cout<<"this year"<<year<<"is a leap year";
    }
    else
    {
        cout<<"This year "<<year<<" is not a leap year";
    }
    return 0;
}
