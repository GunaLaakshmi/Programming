import java.util.*;
class Main {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int row=4;
        int col=4;
        int c1=1;
        int c2=2;
        for(int i=1;i<=row;i++)
        {
            for(int j=1;j<=i;j++)
            {
                if(i%2!=0)
                {
                    System.out.print(c1);
                    c1+=2;
                }
                else
                {
                    System.out.print(c2);
                    c2+=2;
                }
            }
            System.out.println(" ");
        }
    }
}
