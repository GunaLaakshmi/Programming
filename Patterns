2.   1 
    2 2 
   3 3 3  
// Online Java Compiler
// Use this editor to write, compile and run your Java code online

class Main {
    public static void main(String[] args) {
       int row=3;
     
       for(int i=1;i<=row;i++)
       {
           for(int k=1;k<=row-i;k++)
           {
               System.out.print(" ");
           }
           for(int j=1;j<=i;j++)
           {
               System.out.print(i);
               if(j<i)
               {
                   System.out.print(" ");
               }
           }
           System.out.println(" ");
       }
